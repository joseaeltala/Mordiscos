# {{ ansible_managed }}
{% for zone, value in bind_zones.items() %}
{% if 'state' not in value or value.state|lower not in ['disabled', 'absent'] %}

zone "{{ zone }}" IN {
  type master;
{% if zone in bind_dnssec %}
  file "/etc/bind/zones/{{ zone }}/db.signed";
{% else %}
  file "/etc/bind/zones/{{ zone }}/db";
{% endif %}
