#{% for ip in value.allow_transfer %}
#    {{ ip }};
#{% endfor %}
#{% else %}
#    "none";
#{% endif %}
  };
{% if 'options' in value %}
{% for option,  opt_value in value.options.items() %}
  {{ option }} {% if opt_value == True %}yes{% elif opt_value == False %}no{% else %}{{ opt_value }}{% endif %};
{% endfor %}
{% endif %}
};
{% endif %}
{% endfor %}
